<component name="ProjectRunConfigurationManager">
    <configuration default="false" name="Main" type="Application" factoryName="Application">
        <option name="MAIN_CLASS_NAME" value="${package}.Main"/>
        <module name="${rootArtifactId}-app"/>
        <option name="VM_PARAMETERS"
                value="--add-modules=ALL-MODULE-PATH -cp . -p $MODULE_DIR$/target/dependency:$MODULE_DIR$/target/classes"/>
        <method v="2">
            <option name="Make" enabled="true"/>
            <option name="Maven.BeforeRunTask" enabled="true" file="$PROJECT_DIR$/pom.xml" goal="clean package"/>
        </method>
    </configuration>
</component>